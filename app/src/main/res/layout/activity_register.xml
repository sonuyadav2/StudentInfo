<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:orientation="vertical"
    android:background="#F76969">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txtRegistraion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTRATION FORM"
            android:layout_margin="20dp"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"/>


        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Name"
            android:textSize="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/txtRegistraion"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:inputType="text"
            />
<EditText
    android:id="@+id/etEmail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/etName"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:textColor="@color/black"
    android:textColorHint="@color/black"
    android:textSize="25dp"
    android:inputType="textEmailAddress"
    android:hint="Email Adress"
/>
        <EditText
            android:id="@+id/etMobileno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="25dp"
            android:layout_below="@+id/etEmail"
            android:inputType="number"
            android:hint="Mobile No"/>
        <EditText
            android:id="@+id/etAdress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="25dp"
            android:inputType="text"
            android:hint="Adress.."
            android:layout_below="@+id/etMobileno"
            />
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/etChoosepassword"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="25dp"
            android:inputType="textPassword"
            android:hint="Choose A Password"
            android:layout_below="@+id/etAdress"
            />
        <EditText
            android:id="@+id/etConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="25dp"
            android:inputType="textPassword"
            android:hint="Confirm Password"
            android:layout_below="@+id/etChoosepassword"
            />
        <Button
            android:id="@+id/btRegisterform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FC1607"
            android:textColor="@color/black"
            android:layout_below="@+id/etConfirm"
            android:text="REGISTER"
            android:textSize="30sp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>


    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>